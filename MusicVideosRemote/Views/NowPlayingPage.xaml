<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:models="clr-namespace:MusicVideosRemote.Models" x:DataType="models:Video"
             x:Class="MusicVideosRemote.Views.NowPlayingPage" BackgroundColor="#000000" Title="Now Playing">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Text="Artist" TextColor="#FFFFFF" Grid.Column="0" Grid.Row="0"/>

        <Label x:Name="Artist" Text="{Binding Artist}" TextColor="#FFFFFF" Grid.Column="1" Grid.Row="0"/>

        <Label Text="Title" TextColor="#FFFFFF" Grid.Column="0" Grid.Row="1"/>

        <Label x:Name="Title" Text="{Binding Title}" TextColor="#FFFFFF" Grid.Column="1" Grid.Row="1"/>
        
    </Grid>
</ContentPage>