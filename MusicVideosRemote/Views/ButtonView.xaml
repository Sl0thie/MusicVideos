<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicVideosRemote.Views.ButtonView">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="64"/>
    </Grid.RowDefinitions>

    <Button x:Name="ButtonPrevious" Command="{Binding PreviousVideoCommand}" Grid.Column="0" Grid.Row="0" Text="&#xE100;" FontFamily="segmdl2.ttf#Segoe MDL2 Assets" FontSize="32"  />
    <Button x:Name="ButtonPlay" Grid.Column="1" Grid.Row="0" Text="&#xE102;" FontFamily="segmdl2.ttf#Segoe MDL2 Assets" FontSize="32"  />
    <Button x:Name="ButtonPause" Grid.Column="2" Grid.Row="0" Text="&#xE103;" FontFamily="segmdl2.ttf#Segoe MDL2 Assets" FontSize="32"  />
    <Button x:Name="ButtonNext" Command="{Binding NextVideoCommand}" Grid.Column="3" Grid.Row="0" Text="&#xE101;" FontFamily="segmdl2.ttf#Segoe MDL2 Assets" FontSize="32"  />
    <Button x:Name="ButtonVolume" Command="{Binding ShowVolumeCommand}" Grid.Column="4" Grid.Row="0" Text="&#xE15D;" FontFamily="segmdl2.ttf#Segoe MDL2 Assets" FontSize="32" />
</Grid>
